rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	// Temp dev only rules
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2022, 7, 29);
    }

    // Real rules
    match /rooms/{document=**} {
    	allow read: if
      	request.auth.uid != null;
    	allow write: if
      	request.auth.uid == resource.data.owner;
    }
  }
}
